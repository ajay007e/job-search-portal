<section class="sec-2">
  <div class="container">
    <h4 class="heading ">Change the password</h4>
    <div class="way-1">
      <form action="/change-password" method="post">
        <div class="input-group">
          <input
            name="pass"
            autocomplete="off"
            type="text"
            placeholder="Enter current Password"
          />
        <div class="input-group">
          <input
            name="newPass"
            type="password"
            placeholder="Enter New Password"
          />
              {{!-- <i class="far fa-eye-slash eye-password"></i> --}}

        <div class="input-group">
          <input
          autocomplete="off"
            name="rePass"
            type="text"
            placeholder="Re-enter New Password"
          />
        </div>
        <button type="submit" class="btn btn-info">
          Change Password</button>
      </form>
    </div>
    <div class="hr-1">
      <p class="downBtn">Change Security Question
        <i class="fas fa-angle-down"></i></p>
    </div>
    <div class="way-2">
      <form action="/change-question" method="post">
        <div class="input-group">
          <input
          required
            name="pass"
            type="password"
            placeholder="Enter current Password"
          />
        <div class="input-group">
        <select class="sf-question" name="ques">
          <option value="">Select a security Question</option>
          <option value="q1">Q1</option>
          <option value="q2">Q2</option>
          <option value="q3">Q3</option>
        </select>
      </div>
      <div class="input-group">
        <input
          autocomplete="off"
          required
          class="sf-answer"
          name="ans"
          type="text"
          placeholder="Answer for Security Question"
        />
      </div>
      <button type="submit" class="btn btn-info">
          Change </button>
      </form>
    </div>
  </div>

</section>